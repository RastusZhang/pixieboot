#/etc/dnsmasq.d/netboot 
interface=eth0
dhcp-range=NFSHOST,proxy
log-dhcp

enable-tftp
tftp-root=NFSPREFIX
dhcp-boot=NFSPREFIX/pxelinux.0
dhcp-option=17,NFSPREFIX/nfs
dhcp-option=vendor:PXEClient,6,2b
dhcp-no-override

pxe-service=X86PC, "Network Boot Menu", /pxelinux

# neccessary to not break DNS on the host
port=53
no-resolv
server=8.8.8.8
server=8.8.4.4
